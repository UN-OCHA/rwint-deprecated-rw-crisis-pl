  <li class="pl-font-futura-bold-italic">
    [futura bold italic]: {{ headline.short }}
    {{# meta }}
       {{# font-futura-bold-italic}}
        {{>atoms-scss-style}}
      {{/ font-futura-bold-italic}}
    {{/meta}}
  </li>
</ul>
