<ul class="pl-font">
  <li class="pl-font-volkhov">
    [volkhov]:  {{ headline.short }}
    {{# meta }}
       {{# font-volkhov}}
        {{>atoms-scss-style}}
      {{/ font-volkhov}}
    {{/meta}}
    <hr />
  </li>
  <li class="pl-font-futura">
    [futura pt]: {{ headline.short }}
    {{# meta }}
       {{# font-futura}}
        {{>atoms-scss-style}}
      {{/ font-futura}}
    {{/meta}}
    <hr />
  </li>
  <li class="pl-font-futura-italic">
    [futura italic]: {{ headline.short }}
    {{# meta }}
       {{# font-futura-italic}}
        {{>atoms-scss-style}}
      {{/ font-futura-italic}}
    {{/meta}}
    <hr />
  </li>
  <li class="pl-font-futura-bold">
    [futura bold]: {{ headline.short }}
    {{# meta }}
       {{# font-futura-bold}}
        {{>atoms-scss-style}}
      {{/ font-futura-bold}}
    {{/meta}}
    <hr />
  </li>
  <li class="pl-font-futura-bold-italic">
    [futura bold italic]: {{ headline.short }}
    {{# meta }}
       {{# font-futura-bold-italic}}
        {{>atoms-scss-style}}
      {{/ font-futura-bold-italic}}
    {{/meta}}
  </li>
</ul>
